    start [shape=Mdiamond]
    code  [shape=box, llm_model="claude-sonnet-4-5", prompt="Write a Python program that prints numbers from 1 to 20, one per line. For multiples of 3 print Fizz instead of the number, for multiples of 5 print Buzz, for multiples of both print FizzBuzz. Output ONLY the code inside a single fenced code block. No explanations."]
    run   [shape=parallelogram, tool_command="bash \"$EXTRACT_RUN\" python code"]
