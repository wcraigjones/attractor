# Required defaults (already set by scripts when not provided)
AWS_PROFILE=ai-sandbox-administrator
AWS_REGION=us-west-2
AWS_ACCOUNT_ID=582719176192

# Stack/app identity
STACK_PREFIX=attractor-factory
CLUSTER_NAME=attractor-factory-eks
NAMESPACE=factory-system

# Domain and Route53
DOMAIN_NAME=factory.pelx.ai
HOSTED_ZONE_NAME=pelx.ai

# CloudFormation stack names (optional overrides)
NETWORK_STACK_NAME=attractor-factory-network
EKS_STACK_NAME=attractor-factory-eks
ECR_STACK_NAME=attractor-factory-ecr
CERT_STACK_NAME=attractor-factory-cert
DNS_STACK_NAME=attractor-factory-dns

# Image release tag (defaults to git short SHA, must be unique/immutable in ECR)
