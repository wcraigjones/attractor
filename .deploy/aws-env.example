ALB_CONTROLLER_POLICY_NAME=attractor-factory-AWSLoadBalancerControllerIAMPolicy
ALB_CONTROLLER_ROLE_NAME=attractor-factory-aws-load-balancer-controller
OIDC_THUMBPRINT=06b25927c42a721631c1efd9431e648fa62e1e39

# EBS CSI addon overrides (optional)
EBS_CSI_ADDON_NAME=aws-ebs-csi-driver
EBS_CSI_ROLE_NAME=attractor-factory-ebs-csi-controller

# Optional smoke-check run validation
PROJECT_ID=
