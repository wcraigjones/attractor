# EKS sizing overrides (optional)
NODE_MIN_SIZE=2
NODE_DESIRED_SIZE=2
NODE_MAX_SIZE=6
KUBERNETES_VERSION=1.30

# ALB controller / IRSA overrides (optional)
ALB_CONTROLLER_CHART_VERSION=
