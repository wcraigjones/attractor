FROM node:22-bookworm-slim

WORKDIR /workspace

ENV DEBIAN_FRONTEND=noninteractive
ENV CI=1
ENV PLAYWRIGHT_BROWSERS_PATH=/ms-playwright
ENV PLAYWRIGHT_SKIP_BROWSER_DOWNLOAD=1

RUN apt-get update \
  && apt-get install -y --no-install-recommends \
    bash \
    ca-certificates \
    curl \
    dumb-init \
    git \
    jq \
    openssh-client \
  && rm -rf /var/lib/apt/lists/*

# Copy workspace manifests for better layer caching.
COPY package.json package-lock.json ./
COPY apps/factory-api/package.json apps/factory-api/package.json
COPY apps/factory-web/package.json apps/factory-web/package.json
COPY apps/factory-runner-controller/package.json apps/factory-runner-controller/package.json
COPY apps/factory-runner/package.json apps/factory-runner/package.json
COPY packages/dot-engine/package.json packages/dot-engine/package.json
COPY packages/shared-k8s/package.json packages/shared-k8s/package.json
COPY packages/shared-types/package.json packages/shared-types/package.json

RUN npm ci

# Install CLI helpers used for browser automation/snapshots.
RUN npm install -g @playwright/cli@latest playwright@latest

# Install Chromium + OS libraries needed for headless Playwright.
RUN mkdir -p "$PLAYWRIGHT_BROWSERS_PATH" \
  && npx -y playwright@latest install-deps chromium \
  && npx -y playwright@latest install chromium

COPY scripts/docker/dev-entrypoint.sh /usr/local/bin/dev-entrypoint.sh
RUN chmod +x /usr/local/bin/dev-entrypoint.sh \
  && chown -R node:node /workspace /ms-playwright

USER node

ENTRYPOINT ["dumb-init", "--", "dev-entrypoint.sh"]
CMD ["bash"]
